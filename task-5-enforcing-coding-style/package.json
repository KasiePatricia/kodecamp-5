{
  "name": "typescript-calculator",
  "version": "1.0.0",
  "description": "A command line calculator application built with Node.js and TypeScript",
  "main": "dist/calculator.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/calculator.js",
    "dev": "ts-node src/calculator.ts",
    "clean": "rm -rf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "validate": "npm run type-check && npm run lint && npm run format:check"
  },
  "keywords": [
    "calculator",
    "nodejs",
    "typescript",
    "cli",
    "command-line",
    "arithmetic",
    "eslint",
    "prettier",
    "husky",
    "ci-cd"
  ],
  "author": "Ugwu Kasie",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
